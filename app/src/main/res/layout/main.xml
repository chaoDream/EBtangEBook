<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <org.geometerplus.zlibrary.ui.android.view.ZLAndroidWidget
        android:id="@+id/main_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:focusable="true"
        android:scrollbars="vertical"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:fadeScrollbars="false"
        />
    <!--顶部的书名-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="一二三四"
        android:textSize="@dimen/font_size_small"
        android:id="@+id/read_book_name"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/dip_size_5"
        android:textColor="@color/black"/>
    <!--底部的显示电量时间、进度的控件-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dip_size_5"
        android:layout_marginRight="@dimen/dip_size_5"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <com.ebtang.ebtangebook.view.read.widget.BatteryView
                android:layout_width="15dp"
                android:layout_height="7dp"
                android:layout_marginRight="@dimen/dip_size_5"
                android:id="@+id/read_dianliang"
                android:visibility="gone"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/read_time"
                android:text="15:22"
                android:textSize="@dimen/font_size_small"
                android:visibility="gone"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/read_current_bookpage"
                android:textColor="@color/black"
                android:visibility="gone"
                android:textSize="@dimen/font_size_small"
                android:text="121"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/read_bookpage_fenge"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_small"
                android:visibility="gone"
                android:text="/"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/read_total_bookpage"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_small"
                android:visibility="gone"
                android:text="1234"/>
        </LinearLayout>
    </RelativeLayout>
    <!--点击menu时出现的上部分的菜单-->
    <include layout="@layout/top_read"
        android:id="@+id/read_title"/>
    <!--点击menu时出现的下部分的菜单-->
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/read_util_bottom"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/read_day_night_bg"
                android:src="@drawable/read_day"
                android:padding="@dimen/dip_size_5"
                android:scaleType="center"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dip_size_50"
                android:id="@+id/read_daynight"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dip_size_10"
            android:background="@drawable/read_jindu_bg"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dip_size_30"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/db_gray"
                android:id="@+id/read_current_page"
                android:text="50"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/db_gray"
                android:layout_marginLeft="@dimen/dip_size_5"
                android:layout_marginRight="@dimen/dip_size_5"
                android:text="/"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/db_gray"
                android:id="@+id/read_totle_page"
                android:text="1250"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/read_page_bili"
                android:textColor="@color/db_gray"
                android:text="35%"
                android:layout_marginLeft="@dimen/dip_size_20"
                android:layout_marginRight="@dimen/dip_size_20"/>
            <View
                android:layout_width="@dimen/dip_size_1"
                android:layout_height="@dimen/dip_size_15"
                android:background="@color/db_gray"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/read_jindu_back"/>
            <View
                android:layout_width="@dimen/dip_size_1"
                android:layout_height="@dimen/dip_size_15"
                android:background="@color/db_gray"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/read_jindu_mulu"
                android:id="@+id/read_set_mulu"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dip_size_15"
            android:padding="@dimen/dip_size_10"
            android:background="@color/color_primary"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/db_gray"
                android:id="@+id/read_util_lastchapter"
                android:padding="@dimen/dip_size_10"
                android:text="上一章"/>
            <SeekBar
                android:layout_width="0dp"
                style="@style/Widget.SeekBar.Normal"
                android:progress="30"
                android:id="@+id/read_progress_sb"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/db_gray"
                android:padding="@dimen/dip_size_10"
                android:id="@+id/read_util_nextchapter"
                android:text="下一章"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
