<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <include layout="@layout/top_title_bar_main"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dip_size_15">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/read_setting_changan_huaxian"
            android:paddingBottom="@dimen/dip_size_10"
            android:paddingTop="@dimen/dip_size_10"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="长按文字画线"
                android:textSize="@dimen/font_size_large"
                android:textColor="@color/black"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/setting_cb"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_size_1"
            android:background="@color/db_gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/read_setting_yinliang_fanye"
            android:paddingBottom="@dimen/dip_size_10"
            android:paddingTop="@dimen/dip_size_10"
            android:layout_marginTop="@dimen/dip_size_10"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="音量键翻页"
                android:textSize="@dimen/font_size_large"
                android:textColor="@color/black"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/setting_cb"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_size_1"
            android:background="@color/db_gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/read_setting_fanye_anim"
            android:paddingBottom="@dimen/dip_size_10"
            android:paddingTop="@dimen/dip_size_10"
            android:layout_marginTop="@dimen/dip_size_10"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="翻页动画"
                android:textSize="@dimen/font_size_large"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/read_setting_fanye_anim_now"
                android:text="仿真"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/main_found_item_icon_right"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>