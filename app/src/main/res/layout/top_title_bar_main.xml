<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="vertical" >

    <View
        android:id="@+id/top_title_bar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tab_bg"
        />

    <ImageView
        android:id="@+id/top_title_left"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/back"/>
    <ImageView
        android:id="@+id/top_title_right"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/back"/>
    <TextView
        android:id="@+id/top_title_text"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:text="标题"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_toRightOf="@id/top_title_left"
        android:layout_toLeftOf="@id/top_title_right"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_19"/>

</RelativeLayout>