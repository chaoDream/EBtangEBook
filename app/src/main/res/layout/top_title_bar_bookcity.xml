<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="vertical" >

    <View
        android:id="@+id/top_title_bar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tab_bg"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/main_bookcity_title_shizishan"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_large"
            android:layout_marginLeft="@dimen/dip_size_15"
            android:background="@drawable/bookcity_title_channle_checked"
            android:text="狮子山"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/main_bookcity_title_man"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_large"
            android:text="男频"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/main_bookcity_title_women"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_large"
            android:text="女频"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/main_bookcity_title_paihang"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_large"
            android:text="排行"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/main_bookcity_title_free"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_large"
            android:text="免费"/>

        <ImageView
            android:id="@+id/top_title_right"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:src="@drawable/main_icon_search"/>

    </LinearLayout>




</RelativeLayout>