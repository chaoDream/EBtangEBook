<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/read_day_night_bg"
            android:src="@drawable/read_day"
            android:padding="@dimen/dip_size_5"
            android:scaleType="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dip_size_50"
            android:id="@+id/read_daynight"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dip_size_10"
        android:background="@drawable/read_jindu_bg"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dip_size_30"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/db_gray"
            android:id="@+id/read_current_page"
            android:text="50"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/db_gray"
            android:layout_marginLeft="@dimen/dip_size_5"
            android:layout_marginRight="@dimen/dip_size_5"
            android:text="/"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/db_gray"
            android:id="@+id/read_totle_page"
            android:text="1250"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/read_page_bili"
            android:textColor="@color/db_gray"
            android:text="35%"
            android:layout_marginLeft="@dimen/dip_size_20"
            android:layout_marginRight="@dimen/dip_size_20"/>
        <View
            android:layout_width="@dimen/dip_size_1"
            android:layout_height="@dimen/dip_size_15"
            android:background="@color/db_gray"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/read_jindu_back"/>
        <View
            android:layout_width="@dimen/dip_size_1"
            android:layout_height="@dimen/dip_size_15"
            android:background="@color/db_gray"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/read_jindu_mulu"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dip_size_15"
        android:padding="@dimen/dip_size_20"
        android:background="@color/color_primary"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/db_gray"
            android:text="上一章"/>
        <SeekBar
            android:layout_width="0dp"
            style="@style/Widget.SeekBar.Normal"
            android:progress="30"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/db_gray"
            android:text="上一章"/>
    </LinearLayout>

</LinearLayout>