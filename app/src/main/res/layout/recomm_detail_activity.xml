<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <include layout="@layout/top_title_bar_main"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dip_size_15">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/temp_icon_touxiang_small"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dip_size_5"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="英雄无心为爱"
                android:textColor="@color/primary_red"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dip_size_5"
                android:text="新书集结令，龙套楼！"
                android:textSize="@dimen/font_size_large"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dip_size_5"
                android:text="评论内容~~~~很早以前就感觉发网文越来越容易了，感觉遍地都是日更万字的网络写手，随便每天写点什么玛丽苏霸道总裁的都能更新。"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dip_size_5"
                android:text="2016-08-01 11:11"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_size_10"
        android:background="@color/db_gray"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="全部回复"
        android:layout_marginTop="@dimen/dip_size_15"
        android:layout_marginLeft="@dimen/dip_size_15"
        android:layout_marginRight="@dimen/dip_size_15"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_size_1"
        android:layout_marginLeft="@dimen/dip_size_15"
        android:layout_marginRight="@dimen/dip_size_15"
        android:background="@color/db_gray"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/dip_size_15"
        android:layout_marginRight="@dimen/dip_size_15"
        android:divider="@color/db_gray"
        android:dividerHeight="@dimen/dip_size_1"
        android:scrollbars="none"
        android:id="@+id/recomm_detail_lv"></ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@color/primary_red"
            android:gravity="center_vertical|center"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/recomm_write"/>
            <TextView
                android:layout_width="wrap_content"
                android:paddingTop="@dimen/dip_size_15"
                android:paddingBottom="@dimen/dip_size_15"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="@dimen/font_size_large"
                android:text="25"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical|center"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/recomm_unzaned"/>
            <TextView
                android:layout_width="wrap_content"
                android:paddingTop="@dimen/dip_size_15"
                android:paddingBottom="@dimen/dip_size_15"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/font_size_large"
                android:text="15"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>