<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/top_title_bar_main"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/dip_size_15">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ico_goldpay"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip_size_5"
                    android:text="请选择充值金额"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/chongzhi_jine_bt"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="@dimen/dip_size_15"
                    android:layout_marginTop="@dimen/dip_size_15">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+10元"
                        android:textColor="@color/primary_red"
                        android:textSize="@dimen/font_size_large"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dip_size_5"
                        android:text="1000糖豆"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/chongzhi_jine_bt"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="@dimen/dip_size_15"
                    android:layout_marginTop="@dimen/dip_size_15"
                    android:layout_marginLeft="@dimen/dip_size_20">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+20元"
                        android:textColor="@color/primary_red"
                        android:textSize="@dimen/font_size_large"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dip_size_5"
                        android:text="2000糖豆"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/chongzhi_jine_bt"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="@dimen/dip_size_15"
                    android:layout_marginTop="@dimen/dip_size_15">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+50元"
                        android:textColor="@color/primary_red"
                        android:textSize="@dimen/font_size_large"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dip_size_5"
                        android:text="5000糖豆"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/chongzhi_jine_bt"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="@dimen/dip_size_15"
                    android:layout_marginTop="@dimen/dip_size_15"
                    android:layout_marginLeft="@dimen/dip_size_20">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+100元"
                        android:textColor="@color/primary_red"
                        android:textSize="@dimen/font_size_large"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dip_size_5"
                        android:text="10000糖豆"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/dip_size_10">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/chongzhi_jine_bt"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="@dimen/dip_size_15"
                        android:layout_marginTop="@dimen/dip_size_15">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+200元"
                            android:textColor="@color/primary_red"
                            android:textSize="@dimen/font_size_large"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dip_size_5"
                            android:text="20000糖豆"/>
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/dip_size_10">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/chongzhi_jine_bt"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="@dimen/dip_size_15"
                        android:layout_marginTop="@dimen/dip_size_15"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+500元"
                            android:textColor="@color/primary_red"
                            android:textSize="@dimen/font_size_large"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dip_size_5"
                            android:text="50000糖豆"/>
                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_marginTop="@dimen/dip_size_15">
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:lines="1"
                    android:inputType="number"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dip_size_10"
                    android:hint="请输入充值金额"
                    android:background="@drawable/setting_info_edit_et_shape"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="确认"
                    android:textSize="@dimen/font_size_large"
                    android:textColor="@color/white"
                    android:paddingTop="@dimen/dip_size_10"
                    android:paddingBottom="@dimen/dip_size_10"
                    android:paddingLeft="@dimen/dip_size_25"
                    android:paddingRight="@dimen/dip_size_25"
                    android:layout_marginLeft="@dimen/dip_size_10"
                    android:background="@drawable/red_bt"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_red"
                android:text="充值提醒"
                android:layout_marginTop="@dimen/dip_size_25"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dip_size_15">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_xlarge"
                    android:text="."
                    android:layout_marginBottom="@dimen/dip_size_2"
                    android:textColor="@color/primary_red"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付宝,网银充值最低限额20元"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_xlarge"
                    android:text="."
                    android:layout_marginBottom="@dimen/dip_size_2"
                    android:textColor="@color/primary_red"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信充值最低限额10元"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="如您在使用过程中遇到任何问题请联系我们"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dip_size_5"
                android:text="email:ebtang@ebtang.com"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>