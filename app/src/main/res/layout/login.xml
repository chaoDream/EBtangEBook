<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/top_title_bar_main"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dip_size_15"
        android:layout_marginLeft="@dimen/dip_size_15"
        android:layout_marginRight="@dimen/dip_size_15"
        android:background="@drawable/login_input_bg"
        android:gravity="center"
        android:padding="@dimen/dip_size_10"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/login_name"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/login_line"
            android:layout_marginLeft="@dimen/dip_size_10"
            android:layout_marginRight="@dimen/dip_size_10"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/login_name_et"
            android:background="@null"
            android:hint="请输入用户名"
            android:singleLine="true"
            android:padding="@dimen/dip_size_5"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dip_size_15"
        android:layout_marginLeft="@dimen/dip_size_15"
        android:layout_marginRight="@dimen/dip_size_15"
        android:background="@drawable/login_input_bg"
        android:gravity="center"
        android:padding="@dimen/dip_size_10"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/login_psw"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/login_line"
            android:layout_marginLeft="@dimen/dip_size_10"
            android:layout_marginRight="@dimen/dip_size_10"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/login_pw_et"
            android:background="@null"
            android:singleLine="true"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:padding="@dimen/dip_size_5"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dip_size_15"
        android:gravity="right">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂不登录"
            android:layout_marginRight="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码"/>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_bt"
        android:background="@drawable/login_bt"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_large"
        android:layout_marginRight="@dimen/dip_size_15"
        android:layout_marginLeft="@dimen/dip_size_15"
        android:layout_marginTop="@dimen/dip_size_15"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_registe_bt"
        android:background="@drawable/login_resigt_bt"
        android:text="手机号码快速注册"
        android:textColor="@color/primary_red"
        android:textSize="@dimen/font_size_large"
        android:layout_marginRight="@dimen/dip_size_15"
        android:layout_marginLeft="@dimen/dip_size_15"
        android:layout_marginTop="@dimen/dip_size_15"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dip_size_25"
        android:layout_marginLeft="@dimen/dip_size_15"
        android:layout_marginRight="@dimen/dip_size_15">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/login_xuxian"
                android:layout_centerVertical="true"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/login_xuxian"
                android:layout_centerVertical="true"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用其他账号登录"
            android:background="@color/white"
            android:paddingRight="@dimen/dip_size_10"
            android:paddingLeft="@dimen/dip_size_10"
            android:layout_centerInParent="true"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dip_size_20"
        android:layout_marginTop="@dimen/dip_size_10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dip_size_10">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/login_qq"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QQ登录"
                android:layout_marginTop="@dimen/dip_size_5"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/login_weixin"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信登录"
                android:layout_marginTop="@dimen/dip_size_5"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/login_sina"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新浪登录"
                android:layout_marginTop="@dimen/dip_size_5"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginRight="@dimen/dip_size_10">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/login_baidu"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="百度登录"
                android:layout_marginTop="@dimen/dip_size_5"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dip_size_20"
        android:gravity="center|bottom"
        android:textSize="@dimen/font_size_small"
        android:text="雁北堂中文网  版权所有 京ICP备14032472号"/>

</LinearLayout>