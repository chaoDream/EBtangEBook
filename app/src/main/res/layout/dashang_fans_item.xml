    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dip_size_7"
        android:paddingRight="@dimen/dip_size_7"
        android:background="@drawable/red_bt"
        android:text="1"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip_size_5"
        android:layout_marginRight="@dimen/dip_size_5"
        android:src="@drawable/icon_touxiang_small"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="油焖小鳄鱼"/>
